{
  "include": ["**/*.ts"],
  "compilerOptions": {
    "lib": ["ES2019"],
    "outDir": "dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
  }
}